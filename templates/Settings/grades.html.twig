{% trans_default_domain 'messages' %}

{% extends 'base.html.twig' %}

{% block body %}
    <div class="cell shrink medium-cell-block-container">
        <div class="grid-x grid-padding-x">
            <div class="cell medium-12 medium-cell-block-y text-center h2">{{ 'Settings: Grades'|trans }}</div>
        </div>
    </div>
    {{ form_start(form) }}
    <div class="cell medium-auto medium-cell-block-container">
        {% for key,grade in form.grades %}
            <div class="grid-x grid-margin-x grid-padding-x">
                <div class="cell medium-2 medium-cell-block-y align-flex-center h4 justify-left">
                    {{ grade.name.vars.value|default('New Grade'|trans) }}
                </div>
                <div class="cell medium-4 medium-cell-block-y">
                    {{ form_row(grade.name) }}
                </div>
                <div class="cell medium-4 medium-cell-block-y">
                    {{ form_row(grade.studentCount) }}
                </div>
                <div class="cell medium-2 medium-cell-block-y align-flex-center">
                    <a href="{{ path('grade_delete', {'key': key}) }}" class="warning button" title="{{ 'Delete Grade'|trans }}">{{ 'Delete Grade'|trans }}</a>
                </div>
            </div>
        {% endfor %}
        <div class="grid-x grid-margin-x grid-padding-x">
            <div class="cell medium-2 medium-cell-block-y align-flex-center">
                <a href="{{ path('grade_add') }}" class="button secondary" title="{{ 'Add Grade'|trans }}">{{ 'Add Grade'|trans }}</a>
            </div>
            <div class="cell medium-2 medium-cell-block-y align-flex-center">
                <a href="{{ path('grade_remove') }}" class="button secondary" title="{{ 'Remove Grade'|trans }}">{{ 'Remove Grade'|trans }}</a>
            </div>
            <div class="cell medium-offset-4 medium-2 medium-cell-block-y align-flex-center">
                <a href="{{ path('basic_settings') }}" class="button" title="{{ 'Update Basic Settings'|trans }}">{{ 'Settings: Basic'|trans }}</a>
            </div>
            <div class="cell medium-2 medium-cell-block-y align-flex-center">
                {{ form_row(form.saveGrades) }}
            </div>
        </div>
    </div>
    {{ form_end(form) }}
{% endblock body %}
